<Window x:Class="Symo.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Symo"
        mc:Ignorable="d"
        Title="ConfigWindow" Height="300" Width="300">
    <Grid>
        <ComboBox Grid.Row="0" Name="TypeList" Margin="4,4,4,4"/>
        <Frame Grid.Row="1"  Name="ConfigFrame" Margin="4,4,4,4"/>
        <Button Grid.Row="2" Content="OK" Margin="4,4,4,4" Click="Button_Click"/>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
